@model Assignment2_ElinaZafeiri.Models.Trainer
@using Assignment2_ElinaZafeiri.Helper

@{
    ViewBag.Title = "Delete Trainer";
}

<h2>Delete Trainer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(trainer => trainer.FirstName)
        </dt>
        <dd>
            @Model.FirstName
        </dd>

        <dt>
            @Html.DisplayNameFor(trainer => trainer.LastName)
        </dt>
        <dd>
            @Model.LastName
        </dd>

        <dt>
            @Html.DisplayNameFor(trainer => trainer.Salary)
        </dt>
        <dd>
            €@Model.Salary
        </dd>

        <dt>
            @Html.DisplayNameFor(trainer => trainer.HireDate)
        </dt>
        <dd>
            @Model.HireDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(trainer => trainer.isAvailable)
        </dt>
        <dd>
            @Utilities.BoolToYesOrNo(Model.isAvailable)
        </dd>
        <dt>
            @Html.DisplayNameFor(trainer => trainer.Subjects)
        </dt>
        <dd>
            <ul class="list-unstyled">
                @foreach (var subject in Model.Subjects)
                {
                    <li>@subject.Title</li>
                }
            </ul>
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
